{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"],
  
  "rules": {
    "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]}
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": "off",
      "no-use-before-define": ["error", { "variables": false }],
      "no-shadow": "off",
      "react/jsx-props-no-spreading": "off",
      "import/no-extraneous-dependencies": "off"
  }
}
